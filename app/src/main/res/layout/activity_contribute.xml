<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sophia.ywaitgroup7.ActivityContribute">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageViewEstPic"
                android:layout_width="108dp"
                android:layout_height="103dp"
                android:layout_margin="10dp"
                android:src="@mipmap/ic_launcher_round" />


            <TextView
                android:id="@+id/textViewEstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:text="Ricks's All American Cafe"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textViewWaitQ"
            android:layout_width="339dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:text="How Long Will I Wait?"
            android:textSize="30sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <SeekBar
            android:id="@+id/seekBarWaitTime"
            android:layout_width="330dp"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/textViewPeepQ"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="How Many People Are In Line?"
            android:textSize="30sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <SeekBar
            android:id="@+id/seekBarPeepNum"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:tickMark="@color/colorAccent" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />


        <ImageButton
            android:id="@+id/imageButtonMedia"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_camera" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <Button
            android:id="@+id/buttonContSubmit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:text="Submit"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />
        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:text="Cancel"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
